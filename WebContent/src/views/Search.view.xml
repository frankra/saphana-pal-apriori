<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="sap.ui.scpdemoday.views.Search"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="page" busyIndicatorDelay="0"
		title="SAP Cloud Platform - HANA PAL APRIORI Demo" class="sapUiContentPadding"
		showNavButton="false" backgroundDesign="Solid">
		<content>

			<l:HorizontalLayout class="sapUiSmallMargin">
				<Image src="/src/assets/img/twitter.jpg" width="300px" class="twitterImage"></Image>
				<Text width="900px" text="{Text>/apriori}"></Text>
			</l:HorizontalLayout>

			<Panel>
				<headerToolbar>
					<Toolbar>
						<SearchField search="runDemo" class="sapUiSmallMargin" />
						<Button icon="sap-icon://activate" press="executeApriori"></Button>
						<Button icon="sap-icon://synchronize" press="refreshModels"></Button>
					</Toolbar>
				</headerToolbar>
				<content>
					<TileContent footer="Tweets found" class="sapUiSmallMargin">
						<content>
							<NumericContent scale="M"
								value="{SearchData>/numberOfTweets}" valueColor="success" />
						</content>
					</TileContent>
					<TileContent class="sapUiSmallMargin">
						<content>
							<NewsContent contentText="{SearchData>/query}"
								subheader="Search criteria">
							</NewsContent>
						</content>
					</TileContent>
					<TileContent footer="Rules identified" class="sapUiSmallMargin">
						<content>
							<NumericContent scale="M"
								value="{AprioriResult>/rulesCount}" valueColor="success" />
						</content>
					</TileContent>
					<Table inset="false" items="{TopRulesBySupport>/}">
						<headerToolbar>
							<Toolbar>
								<Title text="Top 10 Rules by Support" level="H2" />
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Text text="Prerule" />
							</Column>
							<Column>
								<Text text="Postrule" />
							</Column>
							<Column>
								<Text text="Support" />
							</Column>
							<Column>
								<Text text="Confidence" />
							</Column>
							<Column>
								<Text text="Lift" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{TopRulesBySupport>prerule}" />
									<Text text="{TopRulesBySupport>postrule}" />
									<Text
										text="{path:'TopRulesBySupport>support', formatter:'._formatSupport'}" />
									<Text text="{TopRulesBySupport>confidence}" />
									<Text text="{TopRulesBySupport>lift}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<Table inset="false" items="{TopRulesByConfidence>/}">
						<headerToolbar>
							<Toolbar>
								<Title text="Top 10 Rules by Confidence" level="H2" />
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Text text="Prerule" />
							</Column>
							<Column>
								<Text text="Postrule" />
							</Column>
							<Column>
								<Text text="Support" />
							</Column>
							<Column>
								<Text text="Confidence" />
							</Column>
							<Column>
								<Text text="Lift" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{TopRulesByConfidence>prerule}" />
									<Text text="{TopRulesByConfidence>postrule}" />
									<Text
										text="{path:'TopRulesByConfidence>support', formatter:'._formatSupport'}" />
									<Text text="{TopRulesByConfidence>confidence}" />
									<Text text="{TopRulesByConfidence>lift}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<Table inset="false" items="{TopRulesByLift>/}">
						<headerToolbar>
							<Toolbar>
								<Title text="Top 10 Rules by Lift" level="H2" />
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Text text="Prerule" />
							</Column>
							<Column>
								<Text text="Postrule" />
							</Column>
							<Column>
								<Text text="Support" />
							</Column>
							<Column>
								<Text text="Confidence" />
							</Column>
							<Column>
								<Text text="Lift" />
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{TopRulesByLift>prerule}" />
									<Text text="{TopRulesByLift>postrule}" />
									<Text
										text="{path:'TopRulesByLift>support', formatter:'._formatSupport'}" />
									<Text text="{TopRulesByLift>confidence}" />
									<Text text="{TopRulesByLift>lift}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>

				</content>
			</Panel>
		</content>
	</Page>
</core:View>